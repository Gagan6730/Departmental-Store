<!DOCTYPE html>
<html>
<head>
  <title>Sign-Up/Login Form</title>
  <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
  <link rel="stylesheet" href="/style.css">
</head>

<body>
<% if @user.errors.any? or @store.errors.any? %>
  <div id="error_explanation" style=" position: absolute; top: 100px; max-width: 350px">
    <h2>
      <%= pluralize((@user.errors.count+@store.errors.count), "error") %> prohibited
      this user from being signed up:<br> Sign Up again with proper credentials
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="form">



  <ul class="tab-group">
    <li class="tab active"><a href="#login">Log In</a></li>
    <li class="tab"><a href="#signup">Sign Up</a></li>
  </ul>

  <div class="tab-content">

    <div id="login">

      <%= form_tag "/users/signin", :id => 'hello' do %>
        <h1>Welcome Back</h1>

          <div class="field-wrap">
            <p>
              Email
<!--              <%#= f.label :"Email" %><br><br>-->
              <%= email_field :user, :email, :required=> true %>
            </p>

          </div>

          <div class="field-wrap">
            <p>
              Password
<!--              <%#= label :"Password" %><br><br>-->
              <%= password_field :user, :password, :required=> true %>
            </p>

          </div>

        <div class="top-row">
          <%#= submit_tag ("Sign In")%>
          <div class="field-wrap">
            <p>
              <%= submit_tag("Sign In", :style => "color:white;background:black") %>
            </p>

          </div>
          <div class="field-wrap">
            <p>
              <%#= submit_tag("Sign In", :style => "color:white;background:grey") %>
              <%= submit_tag("Clear", { :name => 'reset', :id => 'reset_button', :type => "reset",:style => "color:white;background:black" }) %>
              <%#=button_to 'Clear', new_user_path,{:style => "color:white;background:grey"} %>
            </p>

          </div>

        </div>
      <% end %>

    </div>

    <div id="signup">
      <%= form_tag(users_path) do %>
        <%#= form_for :user do |f| %>
        <h1>Sign Up for Free</h1>


        <div class="top-row">
          <div class="field-wrap">
            <p>
              First Name
              <!--              <%#= label :"First Name" %><br><br>-->
              <%= text_field :user, :firstName, :required=> true%>
            </p>

          </div>

          <div class="field-wrap">
            <p>
              Last Name
              <!--              <%#= f.label :"Last Name" %><br><br>-->
              <%= text_field :user, :lastName, :required=> true %>

            </p>

          </div>
        </div>

        <div class="top-row">
          <div class="field-wrap">
            <p>
              Email ID
              <!--              <%#= f.label :"Email Id" %><br><br>-->
              <%= email_field :user, :email, :required=> true %>
            </p>

          </div>

          <div class="field-wrap">
            <p>
              Shop Name
              <!--              <%#= f.label :"Shop Name" %><br><br>-->
              <%= text_field :store, :shopName, :required=> true %>
            </p>

          </div>
        </div>



        <div class="top-row">
          <div class="field-wrap">
            <p>
              Password
              <!--              <%#= f.label :"Set A Password" %><br><br>-->
              <%= password_field :user, :password, :required=> true, minlength: 6  %>
            </p>

          </div>

          <div class="field-wrap">
            <p>
              Confirm password
              <!--              <%#= f.label :"Confirm Password" %><br><br>-->
              <%= password_field :user, :password_confirmation, :required=> true, minlength: 6 %>
              <%# if @user.errors.full_messages.any? %>
                <%# @user.errors.full_messages.each do |error_message| %>
<!--                  <%#= error_message if @user.errors.full_messages.first == error_message %> <br />-->
                <%# end %>
              <%# end %>
            </p>

          </div>
        </div>


        <div class="top-row">
          <div class="field-wrap">
            <p>
              Registration No.
              <!--              <%#= f.label :"Registration No." %><br><br>-->
              <%= text_field :store, :registrationNumber, :required=> true %>
            </p>

          </div>

          <div class="field-wrap">
            <p>
              Locality
              <!--              <%#= f.label :"Locality" %><br><br>-->
              <%= text_field :store, :locality, :required=> true %>
            </p>

          </div>
        </div>

        <div class="top-row">
          <div class="field-wrap">
            <p>
              City
              <!--              <%#= f.label :"City" %><br><br>-->
              <%= text_field :store, :city, :required=> true %>
            </p>

          </div>

          <div class="field-wrap">
            <p>
              Pin Code
              <!--              <%#= f.label :"Pin Code" %><br><br>-->
              <%= text_field :store, :pin, :required=> true %>
            </p>

          </div>
        </div>


        <div class="top-row">
          <%#= submit_tag ("Sign In")%>
          <div class="field-wrap">
            <p>
              <%= submit_tag("Sign Up", :style => "color:white;background:black") %>
            </p>

          </div>
          <div class="field-wrap">
            <p>
              <%#= submit_tag("Sign In", :style => "color:white;background:grey") %>
              <%= submit_tag("Clear", { :name => 'reset', :id => 'reset_button', :type => "reset",:style => "color:white;background:black" }) %>
              <%#=button_to 'Clear', new_user_path,{:style => "color:white;background:grey"} %>
            </p>

          </div>

        </div>
      <% end %>


    </div>

  </div><!-- tab-content -->

</div> <!-- /form -->
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script  src="/index.js"></script>

</body>
</html>
